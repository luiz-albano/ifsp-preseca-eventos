{% extends 'base.html.twig' %}

{% block title %}Code{% endblock %}

{% block body %}
    <h1>Code</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ code.id }}</td>
            </tr>
            <tr>
                <th>Hash</th>
                <td>{{ code.hash }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ code.url }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ code.createdAt ? code.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ code.updatedAt ? code.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_code_index') }}">back to list</a>

    <a href="{{ path('app_code_edit', {'id': code.id}) }}">edit</a>

    {{ include('code/_delete_form.html.twig') }}
{% endblock %}
