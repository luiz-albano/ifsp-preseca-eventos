<!DOCTYPE html>
<html lang="{{backend_lang}}">

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="">
	<meta name="author" content="{{site_author}}">
	<meta name="keywords" content="">

	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link rel="shortcut icon" href="{{ absolute_url(asset('assets/backend/img/Favicon.png')) }}" />

	<link rel="canonical" href="{{ app.request.uri }}" />

	<title>{% block title %}Login - {{backend_name}}{% endblock %}</title>

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
	<link href="{{ asset('assets/adminkit/css/app.css') }}" rel="stylesheet">
	<link href="{{ asset('assets/backend/css/backend.css') }}" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
	<style>
		body {
			{# IDs do set de imagens selecionadas para planos de fundos da página. O ID é sorteado randomicamente. #}
			{% set image_id = random([41, 62, 69, 71, 84, 103, 182, 197, 201, 204, 206, 210, 223, 232, 348]) %}
			background-image: url(https://picsum.photos/id/{{image_id}}/1920/1200?blur);
			background-size: cover;
		}
	</style>
</head>

<body>
	<main class="d-flex w-100">
		<div class="container d-flex flex-column">
			<div class="row vh-100">
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

						<div class="text-center rounded mt-4 mb-2 py-3 bg-dark">
							<img src="{{ asset('assets/backend/img/logo_ifsp_PTB.png') }}" class="img-fluid mb-3 w-25">
							<h1 class="h4 text-white fw-bold">{{backend_name}}</h1>
						</div>

						<div class="card">
							<div class="card-body shadow-lg">
								<div class="m-sm-4">

									{% if error %}
									<div class="alert alert-danger" role="alert">
										{{ error.messageKey|trans(error.messageData, 'security') }}
									</div>
									{% endif %}

									<form action="{{ path('app_dashboard_login') }}" method="post">

									    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

										<div class="mb-3">
											<label class="form-label">Usuário</label>
											<input class="form-control form-control-lg" type="text" name="_username" value="{{ last_username }}" placeholder="Informe seu usuário" />
										</div>
										<div class="mb-3">
											<label class="form-label">Senha</label>
											<input class="form-control form-control-lg" type="password" name="_password" placeholder="Informe sua senha" />
											<small>
												<a href="index.html">Esqueceu a senha?</a>
											</small>
										</div>
										<div>
											<label class="form-check">
												<input class="form-check-input" type="checkbox" value="remember-me" name="remember-me" checked>
												<span class="form-check-label">
												Lembrar minhas credenciais
												</span>
											</label>
										</div>
										<div class="text-center mt-3">
											<button type="submit" class="btn btn-lg btn-primary">Entrar</button>
										</div>
									</form>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
	<script src="{{ asset('assets/adminkit/js/app.js') }}"></script>

</body>
</html>