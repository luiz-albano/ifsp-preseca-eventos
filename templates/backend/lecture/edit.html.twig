{% extends '@adminkit/base.html.twig' %}

{% block title %}Programação | {{backend_name}} {% endblock %}

{% block body %}
    <div class="d-flex justify-content-between mb-3">
        <h1 class="h3 d-inline align-middle">Programação</h1>
        <a class="btn btn-info ms-2" href="{{ path('app_event_show', {'id': id_event}) }}">Voltar para Evento <i data-feather="back"></i></a>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h5 class="card-title mb-0">Editar Programação</h5>
                </div>
                <div class="card-body">
                        {{ include('@backend/lecture/_form.html.twig', {'button_label': 'Atualizar'}) }}

                    <div class="d-flex bd-highlight my-3">
                        {{ include('@backend/lecture/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
