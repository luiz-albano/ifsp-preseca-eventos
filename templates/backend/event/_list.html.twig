    <div class="d-flex justify-content-between mb-3">
        <h1 class="h3 d-inline align-middle">Eventos</h1>
        <a class="btn btn-primary ms-2" href="{{ url('app_event_new') }}">Criar novo <i data-feather="plus"></i></a>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h5 class="card-title mb-0">Lista de Eventos</h5>
                </div>
                <div class="card-body">

                    <table class="table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nome</th>
                                <th>Descrição</th>
                                <th>Data de Início</th>
                                <th>Data Final</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for event in events %}
                            <tr>
                                <td>{{ event.id }}</td>
                                <td>{{ event.name }}</td>
                                <td>{{ event.description }}</td>
                                <td>{{ event.startDate ? event.startDate|date('d/m/Y H:i:s') : '' }}</td>
                                <td>{{ event.endDate ? event.endDate|date('d/m/Y H:i:s') : '' }}</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a class="btn btn-info" href="{{ path('app_event_show', {'id': event.id}) }}" title="Visualizar"><i class="align-middle me-1" data-feather="eye"></i></a>
                                        <a class="btn btn-info" href="{{ path('app_event_edit', {'id': event.id}) }}" title="Editar"><i class="align-middle me-1" data-feather="edit"></i></a>
                                    </div>
                                    
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">Nenhum registro encontrado</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>