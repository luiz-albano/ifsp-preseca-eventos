{% extends 'base.html.twig' %}

{% block title %}Code index{% endblock %}

{% block body %}
    <h1>Code index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>QR Code</th>
                <th>Hash</th>
                <th>Url</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for code in codes %}
            <tr>
                <td>{{ code.id }}</td>
                <td><img src="{{ attribute(qrCodes, code.id) }}"></td>
                <td>{{ code.hash }}</td>
                <td>{{ code.url }}</td>
                <td>{{ code.createdAt ? code.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ code.updatedAt ? code.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_code_show', {'id': code.id}) }}">show</a>
                    <a href="{{ path('app_code_edit', {'id': code.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_code_new') }}">Create new</a>
{% endblock %}
